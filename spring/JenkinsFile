pipeline {
    agent any
    
    stages {
        stage('Build and Deploy') {
            steps {
                echo 'Building Spring Boot application...'
                
                dir('spring') {
                    // Build the application
                    bat 'mvn clean package -DskipTests'
                    
                    // Start the application
                    bat 'start /B java -jar target\\*.jar'
                    
                    // Wait for application to start
                    bat 'timeout /t 20 /nobreak'
                }
            }
        }
        
        stage('Test Application') {
            steps {
                echo 'Testing the application...'
                
                script {
                    try {
                        bat 'curl http://localhost:8080/greeting'
                        echo '✅ Application is working!'
                    } catch (Exception e) {
                        echo '⚠️ Curl test failed, but app might still be running'
                        echo 'Try manually: curl http://localhost:8080/greeting'
                    }
                }
            }
        }
    }
    
    post {
        always {
            echo 'Build completed!'
            echo 'If successful, test with: curl http://localhost:8080/greeting'
        }
        success {
            echo '✅ SUCCESS! Your Spring Boot app should be running on port 8080'
        }
        failure {
            echo '❌ Build failed. Check the logs above.'
        }
    }
}
