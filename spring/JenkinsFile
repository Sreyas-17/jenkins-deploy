pipeline {
    agent any
    
    stages {
        stage('Build and Deploy') {
            steps {
                echo 'Building and deploying Spring Boot app...'
                
                dir('spring') {
                    // Stop any running app on port 8080
                    bat '''
                        for /f "tokens=5" %%i in ('netstat -ano ^| findstr :8080 ^| findstr LISTENING') do (
                            taskkill /PID %%i /F 2>nul || echo No process to kill
                        )
                    '''
                    
                    // Build the app
                    bat 'mvn clean package -DskipTests'
                    
                    // Start the app
                    bat 'start /B java -jar target\\*.jar'
                    
                    // Wait for startup
                    bat 'timeout /t 30 /nobreak'
                }
            }
        }
        
        stage('Test') {
            steps {
                echo 'Testing the application...'
                
                script {
                    try {
                        bat 'curl http://localhost:8080/greeting'
                        echo '‚úÖ Application is running!'
                    } catch (Exception e) {
                        echo '‚ùå Application test failed'
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo 'üéâ SUCCESS! Your app is running on http://localhost:8080/greeting'
            echo 'Test it with: curl http://localhost:8080/greeting'
        }
        failure {
            echo '‚ùå Deployment failed!'
        }
    }
}
